<%= bootstrap_form_for @profile do |form| %>
  <%= form.text_field :first_name %>
  <%= form.text_field :last_name %>
  <%= form.text_field :username %>
  <%= form.fields_for :user do |u| %>
    <%= u.email_field :email, placeholder: "Enter Email", label: "Email address", help: "We'll never share your email with anyone else" %>
    <%= u.password_field :password, placeholder: "Password" %>
  <% end %>
  <%= form.submit %>
<% end %>
